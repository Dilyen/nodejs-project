extends layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        if prods.length > 0
                    .grid 
                        each product in prods 
                            article.card.product-item 
                                header.card__header 
                                    h1.product__title #{product.title}
                                div.card__image 
                                    img(src="https://media.gettyimages.com/photos/single-red-book-on-a-white-surface-picture-id173015527?s=612x612", alt="A Book")    
                                div.card__content 
                                    h2.product__price $21.99
                                    p.product__discription A very intresting book about so many even more intrsting things!!! 
                                .card__actions  
                                    button.btn Add to Cart     
        else 
                    h1 No Products